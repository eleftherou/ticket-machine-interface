<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RechargeCode">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:background="@color/athena_blue"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Επαναφόρτιση"
        android:textColor="@color/white"
        android:textSize="24sp"

        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.695" />

    <TextView
        android:id="@+id/text_recharge"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="visible"
        android:text="Εισάγετε τον κωδικό προιόντος."
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#100D0D"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        />
    <!--    loading . . . -->

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/prog_bar"
            android:indeterminateDuration="1500"
            android:progress="0" />
    </RelativeLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/card_barcode"
        android:layout_width="360dp"
        android:layout_height="40dp"

        android:textAlignment="center"

        android:textSize="25dp"
        android:textColor="@color/black"
        android:background="#9A869BAE"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_recharge"
        app:layout_constraintStart_toStartOf="parent"
        />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keyboard"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="#ECECEC"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/card_barcode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <Button
        android:id="@+id/one"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginLeft="10dp"
        android:text="1"
        android:textSize="30dp"
        android:backgroundTint="#869BAE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </Button>

    <Button
        android:id="@+id/two"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:text="2"
        android:textSize="30dp"
        android:backgroundTint="#869BAE"
        app:layout_constraintStart_toEndOf="@id/one"
        app:layout_constraintTop_toTopOf="parent">
    </Button>

    <Button
        android:id="@+id/three"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:text="3"
        android:textSize="30dp"
        android:backgroundTint="#869BAE"
        app:layout_constraintStart_toEndOf="@id/two"
        app:layout_constraintTop_toTopOf="parent">
    </Button>

    <Button
        android:id="@+id/four"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:text="4"
        android:textSize="30dp"
        android:backgroundTint="#869BAE"
        app:layout_constraintStart_toEndOf="@id/three"
        app:layout_constraintTop_toTopOf="parent">
    </Button>

    <Button
        android:id="@+id/five"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:text="5"
        android:textSize="30dp"
        android:backgroundTint="#869BAE"
        app:layout_constraintStart_toEndOf="@id/four"
        app:layout_constraintTop_toTopOf="parent">
    </Button>

        <Button
            android:id="@+id/six"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="6"
            android:textSize="30dp"
            android:backgroundTint="#869BAE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/one">
        </Button>

        <Button
            android:id="@+id/seven"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="7"
            android:textSize="30dp"
            android:backgroundTint="#869BAE"
            app:layout_constraintStart_toEndOf="@id/six"
            app:layout_constraintTop_toBottomOf="@id/two">
        </Button>

        <Button
            android:id="@+id/eight"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="8"
            android:textSize="30dp"
            android:backgroundTint="#869BAE"
            app:layout_constraintStart_toEndOf="@id/seven"
            app:layout_constraintTop_toBottomOf="@id/two">
        </Button>

        <Button
            android:id="@+id/nine"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="9"
            android:textSize="30dp"
            android:backgroundTint="#869BAE"
            app:layout_constraintStart_toEndOf="@id/eight"
            app:layout_constraintTop_toBottomOf="@id/two">
        </Button>

        <Button
            android:id="@+id/zero"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:textSize="30dp"
            android:backgroundTint="#869BAE"
            app:layout_constraintStart_toEndOf="@id/nine"
            app:layout_constraintTop_toBottomOf="@id/two">
        </Button>

        <Button
            android:id="@+id/delete"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="ΔΙΑΓΡΑΦΗ"
            android:textSize="20dp"
            android:backgroundTint="#869BAE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/six">
        </Button>

        <Button
            android:id="@+id/enter"
            android:layout_width="184dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#869BAE"
            android:text="ΣΥΝΕΧΕΙΑ"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@id/delete"
            app:layout_constraintTop_toBottomOf="@id/six" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_button"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#0DE2AD1D"
        android:text="ΠΙΣΩ"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="#E2AD1D"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancel_button"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#0DAD2717"
        android:text="Ακυρωση"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:strokeColor="#AD2717"
        app:strokeWidth="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back_button"
        />

    <ImageView
        android:id="@+id/back_text"
        android:layout_width="30dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/back_button"
        app:layout_constraintStart_toStartOf="@+id/back_button"
        app:layout_constraintTop_toTopOf="@+id/back_button"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/cancel_text"
        android:layout_width="30dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/cancel_button"
        app:layout_constraintStart_toStartOf="@+id/cancel_button"
        app:layout_constraintTop_toTopOf="@+id/cancel_button"
        app:srcCompat="@drawable/cancel" />



</androidx.constraintlayout.widget.ConstraintLayout>